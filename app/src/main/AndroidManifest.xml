<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.movieapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity android:name="com.dicoding.movieapp.ui.home.detail.DetailActivity"
            android:parentActivityName="com.dicoding.movieapp.ui.home.ActivityHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dicoding.movieapp.ui.home.ActivityHome" />
        </activity>
        <activity android:name=".ui.splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.ActivityHome"></activity>
    </application>

</manifest>